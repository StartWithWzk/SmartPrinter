<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="5dp">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/cookbook_img_size"
        android:layout_height="@dimen/cookbook_img_size"
        android:padding="10dp"
        android:src="@drawable/ic_photo_black_48dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cookbook_img_size"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:textSize="@dimen/large_text_size_dp"
        tools:text="菜名"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cookbook_img_size"
        android:layout_marginTop="40dp"
        android:maxLines="3"
        android:textSize="@dimen/normal_text_size_dp"
        tools:text="描述"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="@dimen/cookbook_img_size"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/normal_text_size_dp"
        tools:text="¥1"/>

    <ImageButton
        android:id="@+id/sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:src="@drawable/ic_remove_circle_outline_black_24dp"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_gravity="bottom|right"
        android:gravity="center_horizontal"
        android:textSize="@dimen/large_text_size_dp"
        tools:text="10"/>

    <ImageButton
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@null"
        android:src="@drawable/ic_add_circle_black_24dp"/>


</FrameLayout>